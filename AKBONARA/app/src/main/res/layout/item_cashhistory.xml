<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/history_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020년 11월 4일 20:40"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </TextView>

    <TextView
        android:id="@+id/history_type"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="악보 구매  (DJ 오카와리-플라워댄스)"
        app:layout_constraintTop_toBottomOf="@id/history_time"
        app:layout_constraintLeft_toLeftOf="@id/history_time"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/history_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1,700원"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        />
    <!-- 경계선 -->
    <View
        android:id="@+id/View_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/history_type"
        tools:layout_editor_absoluteX="74dp" />








</androidx.constraintlayout.widget.ConstraintLayout>