<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_sheetmusic"
            android:layout_marginLeft="100dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파일목록"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/darkdarkgrey"
            />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/fileroundedgedark"
        >

        <TextView
            android:id="@+id/filename"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Dj오카와리 플라워댄스.pdf"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:textColor="@color/darkdarkgrey"

            />

        <TextView
            android:id="@+id/open_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="열람"
            android:textColor="@color/darkdarkgrey"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/move_btn"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="게시물로 이동"
        android:gravity="center"
        android:background="@drawable/fileroundedge"
        android:textColor="@color/darkdarkgrey"
        />



</LinearLayout>